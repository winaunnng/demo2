<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
     <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='date_start_wo']" position="after">
                        <div class="o_row o_td_label">
                             <label for="date_start" string="Actual Date"
                                       attrs="{'invisible': [
                                                ('routing_id', '!=', False),
                                                ('state', 'in', ['draft', 'confirmed'])
                                        ]}"/>
                            </div>
                            <div class="o_row">
                                <field name="date_start"
                                       attrs="{'invisible': [
                                            ('routing_id', '!=', False),
                                            ('state', 'in', ['draft', 'confirmed']),
                                        ], 'readonly': [
                                       '|',
                                        '&amp;',
                                            ('routing_id', '=', False),
                                            ('state', 'in', ['done', 'cancel']),
                                        '&amp;',
                                            ('routing_id', '!=', False),
                                            ('state', 'not in', ['draft', 'confirmed'])]}"/>
                                <label for="date_finished" string="to" attrs="{'invisible': [
                                    '|',
                                        ('id', '=', False),
                                        '&amp;',
                                            ('routing_id', '!=', False),
                                            ('state', 'in', ['draft', 'confirmed'])
                                ]}"/>
                                <field name="date_finished" required="1"
                                attrs="{'readonly': [
                                    '|',
                                        '&amp;',
                                            ('routing_id', '=', False),
                                            ('state', 'in', ['done', 'cancel']),
                                        ('routing_id', '!=', False)
                                ], 'invisible': [
                                    ('routing_id', '!=', False),
                                    ('state', 'in', ['draft', 'confirmed'])
                                ]}"/>
                            </div>
                 </xpath>

            </field>
        </record>
     </data>
</odoo>